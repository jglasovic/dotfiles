set -g default-terminal "xterm-256color"
set -ga terminal-overrides ",xterm-256color:Tc"
setw -g xterm-keys on

unbind C-b
set -g prefix C-a

unbind %
bind | split-window -h
bind h split-window -h
unbind '"'
bind - split-window -v
bind v split-window -v

bind right next-window
bind left previous-window

bind q killp

#### Pane borders
# set -g pane-active-border-style fg=colour10
# set -g pane-border-style fg=colour15

#### Easy reload of tmux configuration
bind R source ~/.tmux.conf \; display-message "tmux.conf reloaded."

#### Notify of non-focused window activities
setw -g monitor-activity on
set -g visual-activity on

#### Terminal emulator window title
set -g set-titles on
set -g set-titles-string '#S:#I.#P #W'

#### Vi mode
setw -g mode-keys vi

