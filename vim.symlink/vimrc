let s:plugged_dir_path = '~/.vim/plugged'
let s:autoload_plug_path = '~/.vim/autoload/plug.vim'


" load plugins
if empty(glob(s:autoload_plug_path))
  silent exec "!curl -fLo ".s:autoload_plug_path." --create-dirs "
    \ ."https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
endif

" check for plugged dir
if empty(glob(s:plugged_dir_path))
  silent exec "!mkdir ".s:plugged_dir_path
  autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

"Plugins
runtime! plug-list.vim

"Settings
runtime! settings/*

"Plug-configs
runtime! plug-configs/*